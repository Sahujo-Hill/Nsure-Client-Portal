@page "/policySelect"
@using Microsoft.AspNetCore.Authorization;
@inject AuthenticationStateProvider AuthenticationStateProvider
@using Microsoft.AspNetCore.Components.Authorization

<link rel="stylesheet" href="/css/Global.css" />

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Readex+Pro:wght@160..700&display=swap" rel="stylesheet">

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">

<AuthorizeView>

    <div class="frame"> <!--Generic Frame used for all pages: FrameSTART -->

        <NsureProject.Components.Logo>

        </NsureProject.Components.Logo>

        <div class="policySelector"> <!--All the Policy Selectors: Car, Home, Life-->

            <NavLink style="text-decoration: none" href="myCar" Match="NavLinkMatch.All">

                <div class="myCar">
                    <!--My Car-->
                    <img class="myCarGif" src="/images/elecCar.gif" alt="Car" />

                    <div class="policySelectWhiteBox">
                        <span style="clear;" class="readex40">My Car</span>
                    </div>

                </div>

            </NavLink>

            <NavLink style="text-decoration: none" href="myHome" Match="NavLinkMatch.All">

                <div class="myHome">
                    <!--My Home-->
                    <img class="myHomeGif" src="/images/home.gif" alt="House" />

                    <div class="policySelectWhiteBox">
                        <span class="readex40">My Home</span>
                    </div>

                </div>

            </NavLink>

            <NavLink style="text-decoration: none" href="myLife" Match="NavLinkMatch.All">

                <div class="myLife">
                    <!--My Life-->
                    <img class="myLifeGif" src="/images/hospital.gif" alt="Hospital Bed" />

                    <div class="policySelectWhiteBox">
                        <span class="readex40">My Life</span>
                    </div>

                </div>

            </NavLink>

        </div>

        <div style="background-color: #D9D9D9; margin-top: 22px; padding: 11px 14px;" class="readex24">Hi @context.User.Identity?.Name Please choose one of your policies.</div>

    </div> <!--Generic Frame used for all pages: FrameEND -->

</AuthorizeView>

